@page
@model Albstones.WebApp.Pages.SearchModel
@{
  ViewData["Title"] = "Suche";
}

<div class="row">
  <form>
    <p>
      <div class="input-group">
        <input type="text" asp-for="Item" class="form-control" placeholder="Name, Addresse oder Lokation des Albstones" />
        <div class="input-group-append">
          <button class="btn btn-primary" type="submit">
            <i class="fa fa-search"></i>
          </button>
        </div>
      </div>
    </p>
  </form>
</div>

<div class="row">
  @for (int i = 0; i < Model.Albstones.Count; i++)
  {
    if (i > 0 && i % 3 == 0)
    {
      @:</div><div class="row">
    }
    <div class="col-sm-4">
      <div class="text-center">
        <a href="Detail/?Item=@Model.Albstones[i].Address">
          <img class="rounded" src="data:image/png;base64, @Model.Albstones[i].Image" alt="@Model.Albstones[i].Name">
          <p>@Model.Albstones[i].Name</p>
        </a>
      </div>
    </div>
  }
</div>

<br />

<div class="row">
  <div class="col-sm-12">
    <div class="text-center">
      @if (Model.Albstones.Count > 0)
      {
        <a href="?PageNr=@Model.Previous&PageSize=@Model.PageSize" class="btn btn-primary" role="button">
          <i class="fa-solid fa-circle-left"></i>
        </a>
        <a>&nbsp;&nbsp;Seite @Model.PageNr&nbsp;&nbsp;</a>
        <a href="?PageNr=@Model.Next&PageSize=@Model.PageSize" class="btn btn-primary" role="button">
          <i class="fa-solid fa-circle-right"></i>
        </a>
      }
      else
      {
        <a>keine Albstones gefunden <i class="fa-regular fa-face-sad-tear"></i></a>
      }
    </div>
  </div>
</div>

<br />
