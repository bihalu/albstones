@page
@model Albstones.WebApp.Pages.DetailModel
@{
  ViewData["Title"] = "Detail";
}

@for (int i = 0; i < Model.Albstones.Count; i++)
{
  <div class="row">
    <div class="col-sm-12">
      <div class="text-center">
        <img class="rounded" src="data:image/png;base64, @Model.Albstones[i].Image" alt="@Model.Albstones[i].Name">
        <p>@Model.Albstones[i].Name</p>
        <p>@Model.Albstones[i].Address</p>
        <p>@Model.Albstones[i].Date</p>
        <p>@Model.Albstones[i].Message</p>
        <p>@Model.Albstones[i].FormatCoordinate()</p>
      </div>
    </div>
  </div>
}
