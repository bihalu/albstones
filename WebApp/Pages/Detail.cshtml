@page
@model Albstones.WebApp.Pages.DetailModel
@{
  ViewData["Title"] = "Detail";
}

@for (int i = 0; i < Model.Albstones.Count; i++)
{
  <div class="row">
    <div class="col-sm-12">
      <div class="text-center">
        <img class="rounded" src="data:image/png;base64, @Model.Albstones[i].Image" alt="@Model.Albstones[i].Name">
        <p>Name: @Model.Albstones[i].Name</p>
        <p>Addresse: @Model.Albstones[i].Address</p>
        <p>Geburtsdatum: @Model.Albstones[i].Date</p>
        <p>Nachricht: @Model.Albstones[i].Message</p>
        <p>Koordinaten: @Model.Albstones[i].FormatCoordinate()</p>
        <p>Dezimal: @Model.Albstones[i].FormatCoordinate(decimalFormat: true)</p>
        <p>Words: @Model.Words</p>
        <p>Base64: @Model.WordsBase64</p>
      </div>
    </div>
  </div>
}
